<% include layout %>
<form action="<%= mascota ? '/' + mascota.id + '?_method=PUT' : '/' %>" method="post" class="row g-3">
  <div class="col-6">
    <label class="form-label">Nombre</label>
    <input name="nombre" class="form-control" value="<%= mascota ? mascota.nombre : '' %>" required>
  </div>
  <div class="col-3">
    <label class="form-label">Edad</label>
    <input name="edad" type="number" class="form-control" value="<%= mascota ? mascota.edad : '' %>" required>
  </div>
  <div class="col-12">
    <button class="btn btn-success">Guardar</button>
    <a href="/" class="btn btn-secondary">Cancelar</a>
  </div>
</form>
